<odoo>

    <template id="nck_commission_sales_report.commission_sales">
        <t t-call="web.html_container">
            <t t-set="data_report_margin_top" t-value="12"/>
            <t t-set="data_report_header_spacing" t-value="9"/>
            <t t-set="data_report_dpi" t-value="110"/>
            <t t-call="web.internal_layout">
                <div class="page">
                    <div class="oe_structure"/>
                    <h3 style="text-align:centre;left:50%;">
                        <span t-esc="company.name"/>
                        : Commission Sales Report
                    </h3>

                    <span t-if="wizard_data.get('date_from_filter')">
                        <strong>From :</strong>
                        <t t-esc="wizard_data['date_from_filter']"/>
                    </span>

                    <span t-if="wizard_data.get('date_to_filter')">
                        <strong>To :</strong>
                        <t t-esc="wizard_data['date_to_filter']"/>
                    </span>


                    <div>
                        <div style="text-align:centre;left:50%;" class="row">

                            <div class="col-2">
                                <strong>Products:</strong>
                                <t t-foreach="wizard_data['product_records']" t-as="pd">
                                    <li>
                                        <t t-esc="pd"/>
                                    </li>
                                </t>
                            </div>
                        </div>
                        <div style="text-align:centre;left:50%;" class="row">

                        </div>


                        <br/>
                        <table class="table table-sm table-reports" style="padding:5px;">
                            <thead>
                                <tr class="text-left">
                                    <th>Entry Label</th>
                                    <th>Invoice Date</th>
                                    <th>IR</th>
                                    <th>Product</th>
                                    <th>QTY</th>
                                    <th style="text-align:right;">Sales Price</th>
                                    <th style="text-align:right;">Amount</th>
                                    <th style="text-align:right;">Commission</th>
                                    <th style="text-align:right;"/>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="account_data" t-as="account">
                                    <tr style="font-weight: bold;">
                                        <td colspan="3">
                                            <span style="color: white;" t-esc="'..'"/>
                                            <span t-esc="account['partner_name']"/>
                                        </td>
                                        <td class="text-left">
                                            <span t-esc="account['commission_percentage']"/>
                                            % Commission
                                        </td>
                                        <td groups="base.group_multi_currency"/>
                                        <td style="text-align:right;"/>
                                        <td style="text-align:right;"/>
                                        <td style="text-align:right;"/>
                                    </tr>
                                    <tr t-foreach="account['child_lines']" t-as="line">
                                        <td>
                                            <span t-esc="line['move']"/>
                                        </td>
                                        <td>
                                            <span t-esc="line['invoice_date']"/>
                                        </td>
                                        <td>
                                            <span t-esc="line['internal_reference']"/>
                                        </td>
                                        <td>
                                            <span t-esc="line['product_name']"/>
                                        </td>
                                        <td class="text-left">
                                            <span t-esc="line['invoice_quantity']"/>
                                        </td>
                                        <td class="text-right">
                                            <span t-esc="line['list_price']"
                                                  t-options="{'widget': 'monetary', 'display_currency': env.company.currency_id}"/>
                                        </td>
                                        <td class="text-right">
                                            <span t-esc="line['amount']"
                                                  t-options="{'widget': 'monetary', 'display_currency': env.company.currency_id}"/>
                                        </td>
                                        <td class="text-right">
                                            <span t-esc="line['commission_amount']"
                                                  t-options="{'widget': 'monetary', 'display_currency': env.company.currency_id}"/>
                                        </td>
                                        <td groups="base.group_multi_currency"/>
                                    </tr>
                                    <tr style="font-weight: bold;">
                                        <td colspan="4" style="text-align:right;">
                                            <span style="color: white;" t-esc="'..'"/>
                                            Total Sales
                                            <span t-esc="account['total_lines']['partner_name']"/>
                                        </td>
                                        <td class="text-left">
                                            <t t-esc="account['total_lines']['total_qty_sold']"/>
                                        </td>
                                        <td style="text-align:right;"/>
                                        <td style="text-align:right;">
                                            <span t-esc="account['total_lines']['line_amount_total']"
                                                  t-options="{'widget': 'monetary', 'display_currency': env.company.currency_id}"/>

                                        </td>
                                        <td style="text-align:right;">
                                            <span t-esc="account['total_lines']['commission_amount_total']"
                                                  t-options="{'widget': 'monetary', 'display_currency': env.company.currency_id}"/>

                                        </td>
                                        <td groups="base.group_multi_currency"/>
                                    </tr>

                                </t>
                                <tr style="font-weight: bold;">
                                    <td colspan="4" style="text-align:center;">
                                        <span style="color: white;" t-esc="'..'"/>
                                        All Total
                                    </td>
                                    <td class="text-left">
                                        <t t-esc="all_total[0]['all_qty_total']"/>
                                    </td>
                                    <td style="text-align:right;"/>
                                    <td style="text-align:right;">
                                        <span t-esc="all_total[0]['line_all_total']"
                                              t-options="{'widget': 'monetary', 'display_currency': env.company.currency_id}"/>

                                    </td>
                                    <td style="text-align:right;">
                                        <span t-esc="all_total[0]['all_commission_total']"
                                              t-options="{'widget': 'monetary', 'display_currency': env.company.currency_id}"/>

                                    </td>
                                    <td groups="base.group_multi_currency"/>
                                </tr>

                            </tbody>
                        </table>
                    </div>
                    <br/>
                </div>
            </t>
        </t>
    </template>

    <record id="action_print_commission_sales" model="ir.actions.report">
        <field name="name">Commission Sales</field>
        <field name="model">account.commission.sales</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">nck_commission_sales_report.commission_sales</field>
        <field name="report_file">nck_commission_sales_report.commission_sales</field>
    </record>

</odoo>