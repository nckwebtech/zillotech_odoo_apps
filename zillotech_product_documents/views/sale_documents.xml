<odoo>
    <record id="sale_order_form_inherit" model="ir.ui.view">
        <field name="name">sale.order.inherited.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='payment_term_id']" position="after">
                <field name="page_sale_product_hide" invisible="1"/>
            </xpath>
            <xpath expr="//page[@name='other_information']" position="after">
                <page name="product_documents" string="Product Documents"
                      attrs="{'invisible': [('page_sale_product_hide', '=', True)]}">
                    <group string="Product Documents" name="product_docs">
                        <group>
                            <field name="product_sale_compute_field" invisible="1"/>
                            <field name="sale_order_product_document_ids" widget="many2many_tags"
                                   attrs="{'readonly': [('product_sale_compute_field', '=', True)]}"
                                   options="{'no_create': True,'no_create_edit': True}"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

    <record id="account_move_form_inherit" model="ir.ui.view">
        <field name="name">account.move.inherited.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_date']" position="after">
                <field name="page_invoice_product_hide" invisible="1"/>
            </xpath>
            <xpath expr="//page[@name='other_info']" position="after">
                <page name="product_documents" string="Product Documents"
                      attrs="{'invisible': [('page_invoice_product_hide', '=', True)]}">
                    <group string="Product Documents" name="product_docs">
                        <group>
                            <field name="product_invoice_compute_field" invisible="1"/>
                            <field name="invoice_line_product_document_ids" widget="many2many_tags"
                                   attrs="{'readonly': [('product_invoice_compute_field', '=', True)]}"
                                   options="{'no_create': True,'no_create_edit': True}"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>