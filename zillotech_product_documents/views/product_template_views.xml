<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_template_form_inherit" model="ir.ui.view">
        <field name="name">product.template.inherited.form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="account.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='purchase_ok']" position="after">
                <field name="page_product_doc_hide" invisible="1"/>
            </xpath>
            <xpath expr="//page[@name='invoicing']" position="after">
                <page name="product_documents" string="Product Documents">
                    <group string="Product Documents" name="product_docs"
                           attrs="{'readonly': [('page_product_doc_hide', '=', True)]}">
                        <group>
                            <field name="compute_field" invisible="1"/>
                            <field name="product_document_only_ids" widget="many2many_tags"
                                   attrs="{'readonly': [('compute_field', '=', True)]}"
                                   options="{'no_create_edit': True}"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

    <record id="product_documents_tree" model="ir.ui.view">
        <field name="name">product.documents.tree</field>
        <field name="model">product.documents</field>
        <field name="arch" type="xml">
            <tree string="Product Documents">
                <field name="attachment_ids"/>
                <field name="doc_category"/>
            </tree>
        </field>
    </record>

    <record id="product_documents_form" model="ir.ui.view">
        <field name="name">product.documents.form</field>
        <field name="model">product.documents</field>
        <field name="arch" type="xml">
            <form string="Product Documents">
                <sheet>
                    <group>
                        <group>
                            <field name="compute_field" invisible="1"/>
                            <field name="doc_category" attrs="{'readonly': [('compute_field', '=', True)]}"/>
                        </group>
                        <group>
                            <field name="attachment_ids" widget="many2many_binary" colspan="2"
                                   attrs="{'readonly': [('compute_field', '=', True)]}"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="product_documents_action" model="ir.actions.act_window">
        <field name="name">Product Documents</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">product.documents</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        id="menu_product_documents"
        name="Product Documents"
        parent="stock.menu_product_in_config_stock"
        action="product_documents_action"
        sequence="100"/>

</odoo>