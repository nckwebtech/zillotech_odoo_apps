<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="us_check_paper_format" model="report.paperformat">
        <field name="name">US Check</field>
        <field name="default" eval="False"/>
        <field name="format">Letter</field>
        <field name="page_height">0</field>
        <field name="page_width">0</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">0</field>
        <field name="margin_bottom">0</field>
        <field name="margin_left">0</field>
        <field name="margin_right">0</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">0</field>
        <field name="dpi">90</field>
    </record>

    <record id="action_print_check_top" model="ir.actions.report">
        <field name="name">(Top) Print Check</field>
        <field name="model">account.payment</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">zillotech_us_check_print.print_check_top</field>
        <field name="report_file">zillotech_us_check_print.print_check_top</field>
        <field name="print_report_name">'Print Report (Top)'</field>
        <field name="paperformat_id" ref="zillotech_us_check_print.us_check_paper_format"/>

    </record>

    <record id="action_print_check_middle" model="ir.actions.report">
        <field name="name">(Middle) Print Check</field>
        <field name="model">account.payment</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">zillotech_us_check_print.print_check_middle</field>
        <field name="report_file">zillotech_us_check_print.print_check_middle</field>
        <field name="print_report_name">'Print Report (Middle)'</field>
        <field name="paperformat_id" ref="zillotech_us_check_print.us_check_paper_format"/>
    </record>

    <record id="action_print_check_bottom" model="ir.actions.report">
        <field name="name">(Bottom) Print Check</field>
        <field name="model">account.payment</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">zillotech_us_check_print.print_check_bottom</field>
        <field name="report_file">zillotech_us_check_print.print_check_bottom</field>
        <field name="print_report_name">'Print Report (Bottom)'</field>
        <field name="paperformat_id" ref="zillotech_us_check_print.us_check_paper_format"/>
    </record>
</odoo>