<?xml version="1.0" encoding="utf-8"?>
<odoo>


    <record id="check_config_template_tree" model="ir.ui.view">
        <field name="name">check.config.template.tree</field>
        <field name="model">check.config.template</field>
        <field name="arch" type="xml">
            <tree>
                <field name="template_name"/>
            </tree>
        </field>
    </record>
    <record id="check_config_template_form" model="ir.ui.view">
        <field name="name">check.config.template.form</field>
        <field name="model">check.config.template</field>
        <field name="arch" type="xml">
            <form string="Check Template Configuration">
                <sheet>
                    <group>
                        <group>
                            <field name="template_name"/>
                            <field name="check_printing_layout_template"/>
                            <field name="check_printing_details_multi"/>

                        </group>
                        <group>
                            <field name="check_printing_top_margin"/>
                            <field name="check_printing_left_margin"/>
                        </group>
                        <group string="Offset for Top Date">
                            <field name="css_top_date_top"/>
                            <field name="css_top_date_left"/>
                        </group>
                        <group string="Offset for Payee Name">
                            <field name="css_check_top_payee_name_top"/>
                            <field name="css_check_top_payee_name_left"/>
                        </group>
                        <group string="Offset for Top Amount">
                            <field name="css_check_top_amount_top"/>
                            <field name="css_check_top_amount_left"/>
                        </group>
                        <group string="Offset for Top Amount in Word">
                            <field name="css_check_top_amount_in_word_top"/>
                            <field name="css_check_top_amount_in_word_left"/>
                        </group>
                        <group string="Offset for Payee Address">
                            <field name="css_check_top_payee_addr_top"/>
                            <field name="css_check_top_payee_addr_left"/>
                        </group>
                        <group string="Offset for Top Memo">
                            <field name="css_check_top_memo_top"/>
                            <field name="css_check_top_memo_left"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread" options="{'post_refresh': 'recipients'}"/>
                </div>
            </form>
        </field>
    </record>

    <record id="check_config_template_action" model="ir.actions.act_window">
        <field name="name">Check Configuration Template</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">check.config.template</field>
        <field name="view_mode">tree,form</field>
    </record>
    <!-- Top menu -->
    <menuitem action="check_config_template_action"
              id="check_config_template"
              name="Check Configuration Template"
              parent="account.menu_finance_configuration"
              sequence="100"/>
</odoo>
